ENTRY=${ENTRY:gs/:memo:/📝}
ENTRY=${ENTRY:gs/:money:/💵}
ENTRY=${ENTRY:gs/:movie:/🎬}
ENTRY=${ENTRY:gs/:music:/🎵}
ENTRY=${ENTRY:gs/:meet:/🧑‍🤝‍🧑}
ENTRY=${ENTRY:gs/:pen:/✒️}
ENTRY=${ENTRY:gs/:phone:/☎}
ENTRY=${ENTRY:gs/:pill:/💊}
ENTRY=${ENTRY:gs/:pin:/📌}
ENTRY=${ENTRY:gs/:pizza:/🍕}
ENTRY=${ENTRY:gs/:ppcot:/🙏🍒}
ENTRY=${ENTRY:gs/:pray:/🙏}
ENTRY=${ENTRY:gs/:puzzle:/🧩}
ENTRY=${ENTRY:gs/:rofl:/🤣}
