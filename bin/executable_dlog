ENTRY=${ENTRY/#W /âš’ï¸ }
#- Personal
ENTRY=${ENTRY:gs/DARTER/[[dartp6]]}
ENTRY=${ENTRY:gs/FreeNAS/[[FreeNAS]]}
ENTRY=${ENTRY:gs/LUNCH/ðŸ± Lunch}
