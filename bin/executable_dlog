#!/bin/zsh
# Make sure that mise is there and versioning works
if command -v mise &> /dev/null; then
  eval $(mise activate --shims)
fi

cd $HOME/src/erebusbat/dlog-ruby/

# Shortcut to run bundler
if [[ $1 == "bundle" ]] && [[ $# -eq 1 ]]; then
  bundle install
  exit 0
fi

bundle exec bin/dlog $*
