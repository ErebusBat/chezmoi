#!/bin/bash

MSG=$1
SHOULD_SAY=$2
PUSHOVER_TOKEN=akzoqsxir8e33h55juj2fpjdq4gmrx
PUSHOVER_USER=uBbNZL3PG3dtBhZiCUhZNRESyoeHEX
PUSHOVER_SOUND=bugle

if [[ -z $MSG ]]; then
  MSG="Task Done"
fi

curl -s \
  -F "token=${PUSHOVER_TOKEN}" \
  -F "user=${PUSHOVER_USER}" \
  -F "sound=${PUSHOVER_SOUND}" \
  -F "message=${MSG}" \
  https://api.pushover.net/1/messages.json
echo ""

if [[ -n $SHOULD_SAY ]]; then
  beep
fi
