{
  "enabledPlugins": {
    "claude-mem@thedotmack": true
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/delayed-notification.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "command": "bd prime",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/cancel-notification.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/cleanup-notifications.sh",
            "type": "command"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "bd prime",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/cancel-notification.sh",
            "type": "command"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash([ *)",
      "Bash(awk *)",
      "Bash(basename *)",
      "Bash(cat *)",
      "Bash(cd *)",
      "Bash(cut *)",
      "Bash(dirname *)",
      "Bash(echo *)",
      "Bash(expr *)",
      "Bash(file *)",
      "Bash(find *)",
      "Bash(git *)",
      "Bash(/opt/homebrew/bin/git *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(rg *)",
      "Bash(sed *)",
      "Bash(sort *)",
      "Bash(stat *)",
      "Bash(tail *)",
      "Bash(test *)",
      "Bash(tr *)",
      "Bash(uniq *)",
      "Bash(wc *)",
      "Bash(which *)",
      "Bash(xargs *)"
    ],
    "deny": [
      "Bash(git push *)"
    ]
  },
  "statusLine": {
    "command": "~/.claude/statusline-usage.sh",
    "type": "command"
  }
}