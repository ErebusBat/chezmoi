{{- $email := "" -}}
{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- end -}}
{{- if eq $email "" -}}
{{-   $email = promptString "email" -}}
{{- end -}}

{{- $focus := "" -}}
{{- if hasKey . "focus" -}}
{{-   $focus = .focus -}}
{{- end -}}
{{- if eq $focus "" -}}
{{-   $focus = promptString "focus" -}}
{{- end -}}


[data]
  focus = {{ $focus | quote }}
  email = {{ $email | quote }}

  [data.area]
    {{- if (index . "otherKey" ) }}
    fetlife = {{ .area.fetlife }}
    personal = {{ .area.personal }}
    server = {{ .area.server }}
    tractionguest = {{ .area.tractionguest }}
    {{- else }}
    fetlife = false
    personal = {{ default false (eq $focus "personal") }}
    server = {{ default false (eq $focus "server") }}
    tractionguest = {{ default false (eq $focus "sie") }}
    {{ end }}

  [data.synergy]
    enabled = false
    mode = "client"
    server = "sie-mbp.erebusbat.net"

[git]
  autoAdd = true
  autoCommit = true
  autoPush = true
